<%= link_to "Create a room", new_room_path, class: 'btn btn-outline-primary offset-2' %>
<hr>
<% if @rooms.present? %>
  <div class="list-group col-9 offset-1">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: "list-group-item list-group-item-action #{ room.name == @room&.name ? 'active' : ''} " %>
    <% end %>
  </div>
<% else %>
  <div class="text-muted">
    The are no rooms
  </div>
<% end %>