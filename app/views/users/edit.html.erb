<div class="alert alert-primary" role="alert">
<strong>Hola <%= @user.username %>,</strong> Ingresa tu nueva contraseÃ±a!
</div>
<div class="card offset-3 col-md-4">
  <%= image_tag 'https://panndora-topics.s3.us-east-2.amazonaws.com/panndoralogo.png', width: 200, height: 200, class: "img_signin offset-3" %>
  <%= form_for(@user, :url => { :action => "update_password" } ) do |f| %><br>
    <%= render "users/shared/error_messages", resource: @user %>
    <div class="form-group">
      <%= f.label t('views.users.password') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> t('views.users.characters'))</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label t('views.users.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

      <%= f.submit t('views.navigation_bar.signup'), class: 'btn btn-primary' %><br><br>
  <% end %>
</div>