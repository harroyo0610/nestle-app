<%= image_tag 'https://panndora-topics.s3.us-east-2.amazonaws.com/panndoralogo.png', width: 200, height: 200, class: "img_signin" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %><br>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label t('views.users.username') %><br />
    <%= f.text_field :username, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label t('views.users.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> t('views.users.characters'))</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label t('views.users.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

    <%= f.submit t('views.navigation_bar.signup'), class: 'btn btn-primary' %>
    <%= link_to t('views.navigation_bar.login'), new_session_path(resource_name), class: 'btn btn-link' %><br><br>
<% end %>